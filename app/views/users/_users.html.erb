<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.img.present? %> 
          <%= image_tag user.img.url, class: "pi futi mt-1", alt: "" %>
        <% else %>   
          <img class="rounded pi mt-1" src="<%= gravatar_url(user) %>" alt="">
        <% end %>
        <div class="media-body ml-2 chuuou"> 
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'profile', user_path(user) %>
            
            <% if current_user.admin? && !(current_user == user) %>
              <%= link_to "▲削除▲", user, method: :delete,data: { confirm: "本当に削除してもいいですか?" } %>
            <% end %>
            
            </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>