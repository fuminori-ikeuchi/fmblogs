<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.img.present? %> 
        <%= image_tag user.img.url, class: "pi", alt: "" %>
      <% else %>   
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 40 }) %>" alt="">
      <% end %>
        <div class="media-body ml-2">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>