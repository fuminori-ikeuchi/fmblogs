<div class="row">
  <div class="offset-sm-1 col-sm-4 text-center">
    <h2 class="mt-5"><%= @user.name %> さんの編集画面</h2>
  </div>
</div>
<div class="row mt-5">
  <div class="offset-sm-1 col-sm-4 ">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, '◎ お名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, '◎ メール' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, '◎ Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, '◎Password confirmation(確認用)' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
  </div>
  <div class="offset-sm-1 col-sm-5">
      <div class="form-group">
        <%= f.label :introduce, '◎ 自己紹介文' %>
        <%= f.text_area :introduce, class: 'form-control', rows: 5 %>
      </div>
      
      <div class="form-group mb-3"> 
        <%= f.label :img, '◎ プロフィール画像' %>
        <%= f.file_field :img, class: 'form-control'  %>
      </div>
  </div>
</div>
<div class="row edit-bottom mt-4">
  <div class="offset-sm-1 col-sm-10">
    <%= f.submit '編集完了', class: 'btn btn-primary btn-block' %>
    <% end %>
    <div class="mt-2">
    <%= link_to '戻る', @user %>
    </div>
  </div>
</div>

