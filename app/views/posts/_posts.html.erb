<ul class="list-unstyled">
  <% posts.each do |post| %>
    <li class="media mb-3">
      <% if post.user.img.present? %>
        <div class="mt-3 ml-4"><%= image_tag post.user.img.url, class: "futi picture", alt: "" %></div>
        </%>
      <% else %>
        <img class="mt-3 rounded picture ml-4" src="<%= gravatar_url(post.user) %>" alt="">
      <% end %>
      <div class="media-body ml-3 mt-3">
        <%= link_to post.user.name, user_path(post.user), class: "link chuuou"%> <span class="text-muted">posted at <%= post.created_at %></span>
        <div class="mt-3">
          <p class="mb-0"><%= post.title %></p>
        </div>
        <div class="text-center">
            <%= link_to '詳細', post_path(post), class: "btn btn-outline-primary" %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
<div class="pagi">
  <%= paginate posts %>
</div>

